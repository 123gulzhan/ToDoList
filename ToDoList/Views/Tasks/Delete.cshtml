@model ToDoList.Models.Task

@{
    ViewBag.Title = "Удаление задачи";
    Layout = "_Layout";
}

<h4>@ViewBag.Title</h4>
<form method="post" asp-action="Delete" asp-controller="Tasks" asp-route-id="@Model.Id">
    <p>Удалить задачу "@Model.Header"?</p>
    <input type="submit" value="ДА">
    <a asp-action="Index" asp-controller="Tasks">НЕТ</a>
</form>